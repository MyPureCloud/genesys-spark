{
  "private": true,
  "name": "genesys-spark-vue-3-playground",
  "version": "0.0.1",
  "description": "Vue 3 playground for Spark components",
  "license": "MIT",
  "author": "",
  "scripts": {
    "eslint": "eslint . --no-error-on-unmatched-pattern --fix",
    "lint-all": "npm-run-all \"stylelint\" \"eslint\" \"prettier\" \"prettier-package-json\"",
    "lint-staged": "lint-staged",
    "prettier": "prettier --loglevel silent --ignore-path .gitignore --ignore-unknown --write .",
    "prettier-package-json": "prettier-package-json --write ./package.json",
    "start": "http-server . --port 8090",
    "stylelint": "stylelint --fix \"**/*.{css,html,less}\""
  },
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.41.0",
    "eslint-config-genesys-spark-components": "file:../../shared-configs/eslint-config-genesys-spark-components",
    "eslint-config-prettier": "^8.8.0",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.5.0",
    "postcss-less": "^6.0.0",
    "prettier": "^2.8.8",
    "prettier-config-genesys-spark-components": "file:../../shared-configs/prettier-config-genesys-spark-components",
    "prettier-package-json": "^2.8.0",
    "stylelint": "^15.9.0",
    "stylelint-config-genesys-spark-components": "file:../../shared-configs/stylelint-config-genesys-spark-components",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^4.2.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^9.0.0"
  },
  "prettier": "prettier-config-genesys-spark-components"
}
