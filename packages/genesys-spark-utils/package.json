{
  "name": "genesys-spark-utils",
  "version": "4.179.1",
  "description": "Shared utilities for Genesys Spark packages",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rm -rf dist",
    "eslint": "eslint --fix",
    "lint-all": "npm-run-all \"eslint\" \"prettier\" \"prettier-package-json\"",
    "lint-staged": "lint-staged --concurrent false",
    "prettier": "prettier --log-level silent --ignore-unknown --write .",
    "prettier-package-json": "prettier-package-json --write ./package.json",
    "test": "npm run test.unit",
    "test.ci": "npm run test",
    "test.unit": "jest",
    "test.unit.watch": "jest --watch",
    "version-sync": "npm version --no-git-tag-version --allow-same-version"
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "eslint": "^9.37.0",
    "eslint-config-genesys-spark-components": "file:../../shared-configs/eslint-config-genesys-spark-components",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prettier-config-genesys-spark-components": "file:../../shared-configs/prettier-config-genesys-spark-components",
    "prettier-package-json": "^2.8.0",
    "ts-jest": "^29.4.4",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.46.0"
  },
  "prettier": "prettier-config-genesys-spark-components"
}
