{
  "name": "genesys-spark",
  "version": "4.149.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run prebuild.clean",
    "build": "npm run build.style-sheets && npm run build.rollup && npm run build.token-files",
    "postbuild": "npm run postbuild.generate-component-data",
    "build.rollup": "rollup -c",
    "build.style-sheets": "./scripts/build-style-sheets.sh",
    "build.token-files": "./scripts/build-token-files.mjs",
    "dev": "rollup -c --watch",
    "eslint": "eslint . --fix",
    "lint-all": "npm-run-all \"stylelint\" \"eslint\" \"prettier\" \"prettier-package-json\"",
    "lint-staged": "lint-staged --concurrent false",
    "postbuild.generate-component-data": "node ./scripts/generate-component-data.mjs",
    "prebuild.clean": "./scripts/clean.sh",
    "prettier": "prettier --log-level silent --ignore-path .prettierignore --ignore-unknown --write .",
    "prettier-package-json": "prettier-package-json --write ./package.json",
    "snapshot": "OUTDIR=snapshot npm run build",
    "stylelint": "stylelint --fix \"**/*.{css,html,scss}\"",
    "test": "npm run test.snapshot && npm run test.unit",
    "test.ci": "npm run test",
    "test.snapshot": "./scripts/snapshot.mjs",
    "test.unit": "jest",
    "test.unit.watch": "jest --watch",
    "version-sync": "npm version --no-git-tag-version --allow-same-version"
  },
  "types": "dist/index.d.ts",
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.24.3"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^6.0.2",
    "@tsconfig/strictest": "^2.0.5",
    "dir-compare": "^5.0.0",
    "eslint": "^9.27.0",
    "eslint-config-genesys-spark-components": "file:../../shared-configs/eslint-config-genesys-spark-components",
    "glob": "^11.0.2",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier-package-json": "^2.8.0",
    "rollup": "^4.41.0",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "sass": "^1.89.0",
    "smob": "^1.5.0",
    "stylelint": "^16.19.1",
    "stylelint-config-genesys-spark-components": "file:../../shared-configs/stylelint-config-genesys-spark-components",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-scss": "^6.12.0",
    "ts-jest": "^29.3.4"
  }
}
