{
  "color": {
    "info": {
      "lightest": "#e2dff8",
      "lighter": "#c5bef1",
      "main": "#6e5ddb",
      "darker": "#443989",
      "darkest": "#2e275f"
    },
    "warning": {
      "lightest": "#fef4d8",
      "lighter": "#fce9b2",
      "main": "#f8c73e",
      "darker": "#6c5619",
      "darkest": "#3d300c"
    },
    "error": {
      "lightest": "#f9d3da",
      "lighter": "#f3a7b5",
      "main": "#e22245",
      "darker": "#881429",
      "darkest": "#440a15"
    },
    "success": {
      "lightest": "#cef0e6",
      "lighter": "#9de1cd",
      "main": "#09b581",
      "darker": "#056d4d",
      "darkest": "#033627"
    },
    "primary": {
      "lightest": "#ced2fc",
      "lighter": "#9ca6f9",
      "main": "#4856cb",
      "darker": "#3742a2",
      "darkest": "#252e78"
    },
    "focus": "#7b88f7"
  },
  "focus_ring": {
    "width": "3px",
    "offset": "1px",
    "corner_radius": "4px",
    "default": {
      "border": {
        "color": "#7B88F7",
        "width": "3px",
        "style": "solid"
      }
    },
    "small": {
      "border": {
        "color": "#7B88F7",
        "width": "2px",
        "style": "solid"
      }
    }
  },
  "z_index": {
    "base": 0,
    "show-focus": 1,
    "sticky": 1,
    "popup": 100,
    "popover": 200,
    "tooltip": 200,
    "panel": 300,
    "navbar": 400,
    "sidebar": 400,
    "toast": 500,
    "modal": 600
  },
  "forms": {
    "max_width": "600px",
    "margin": "24px",
    "form_body": {
      "padding_bottom": "32px"
    },
    "form_footer": {
      "vertical_padding": "16px",
      "separator": {
        "color": "#c6c8ce",
        "width": 1,
        "style": "solid"
      }
    },
    "form_control": {
      "grouped_inputs": {
        "gap": "8px"
      },
      "gap": "16px",
      "label": {
        "margin_bottom": "4px"
      },
      "helper_text": {
        "margin_top": "4px"
      }
    },
    "form_header": {
      "padding_bottom": "20px",
      "gap": "4px",
      "foreground_color": "#1b2c48",
      "text": {
        "fontFamily": "Urbanist",
        "lineHeight": "32px",
        "fontSize": "24px",
        "fontWeight": 600
      }
    },
    "fieldset": {
      "padding_bottom": "48px",
      "header": {
        "padding_bottom": "20px",
        "gap": "4px",
        "foreground_color": "#1b2c48",
        "text": {
          "fontFamily": "Urbanist",
          "lineHeight": "27px",
          "fontSize": "18px",
          "fontWeight": 700
        }
      }
    },
    "paragraph": {
      "foreground_color": "#3e5374",
      "text": {
        "fontFamily": "Noto Sans",
        "lineHeight": "18px",
        "fontSize": "12px",
        "fontWeight": 400
      }
    }
  }
}
