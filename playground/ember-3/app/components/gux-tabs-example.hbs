<div style='margin: 20px; padding: 20px; border: 2px solid grey'>

  <h2>gux-tabs playgroud</h2>

  <div style='margin: 10px 0'>
    <gux-tabs class='example' active-tab='1-2'>
      <gux-tab-list slot='tab-list'>
        <gux-tab tab-id='1-1'>
          <span>Tab Header 1</span>
        </gux-tab>
        <gux-tab tab-id='1-2'>
          <span>Tab Header 2</span>
        </gux-tab>
        <gux-tab tab-id='1-3'>
          <span>Tab Header 3</span>
        </gux-tab>
        <gux-tab tab-id='1-4'>
          <span>Tab Header 4</span>
        </gux-tab>
        <gux-tab tab-id='1-5'>
          <span>Tab Header 5</span>
        </gux-tab>
        <gux-tab tab-id='1-6'>
          <span>Tab Header 6</span>
        </gux-tab>
        <gux-tab tab-id='1-7'>
          <span>Tab Header 7</span>
        </gux-tab>
        <gux-tab tab-id='1-8'>
          <span>Tab Header 8</span>
        </gux-tab>
        <gux-tab tab-id='1-9'>
          <span>Tab Header 9</span>
        </gux-tab>
        <gux-tab tab-id='1-10'>
          <span>Tab Header 10</span>
        </gux-tab>
      </gux-tab-list>
      <gux-tab-panel tab-id='1-1'>
        <span>Tab content 1</span>
      </gux-tab-panel>
      <gux-tab-panel tab-id='1-2'>
        <span>Tab content 2</span>
      </gux-tab-panel>
      <gux-tab-panel tab-id='1-3'>
        <span>Tab content 3</span>
      </gux-tab-panel>
      <gux-tab-panel tab-id='1-4'>
        <span>Tab content 4</span>
      </gux-tab-panel>
      <gux-tab-panel tab-id='1-5'>
        <span>Tab content 5</span>
      </gux-tab-panel>
      <gux-tab-panel tab-id='1-6'>
        <span>Tab content 6</span>
      </gux-tab-panel>
      <gux-tab-panel tab-id='1-7'>
        <span>Tab content 7</span>
      </gux-tab-panel>
      <gux-tab-panel tab-id='1-8'>
        <span>Tab content 8</span>
      </gux-tab-panel>
      <gux-tab-panel tab-id='1-9'>
        <span>Tab content 9</span>
      </gux-tab-panel>
      <gux-tab-panel tab-id='1-10'>Tab content 10</gux-tab-panel>
    </gux-tabs>
  </div>

  <gux-button {{on 'click' this.showTabs}}>
    Show Tabs
  </gux-button>

  <div style='margin:50px'>
    {{#if this.isShown}}
      <gux-tabs
        class='example'
        active-tab={{this.activeTab}}
        {{on 'guxactivetabchange' this.activeTabChange}}
      >
        <gux-tab-list slot='tab-list'>
          {{#each this.tabs as |tab|}}
            <gux-tab tab-id={{tab.id}}><span>{{tab.title}}</span></gux-tab>
          {{/each}}
        </gux-tab-list>
      </gux-tabs>
    {{/if}}
  </div>

</div>